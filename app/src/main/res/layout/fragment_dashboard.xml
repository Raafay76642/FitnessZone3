<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="24dp"
            android:text="Abdullah Hassan"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/fbmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:text="Make Yourself Fit" />
        <TextView
            android:id="@+id/ftarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:text="Make Yourself Fit" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="openprofile"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/profile"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Profile"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenSetReminder"


                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/deit"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Set Reminder"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="opencostEstimation"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/workout"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="About App"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:onClick="openVidoVlog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/settings"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Settings"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:onClick="openbmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layoutround"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_margin="20sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:src="@drawable/app"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="Caclculate BMI"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>